{% extends 'base.html.twig' %}


{% block main %}
    <div class="container mt-4">
        <div class="card shadow">
            <div class="card-body">
                <div class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1 class="m-0 text-dark">{{ 'app.homepage.search_courses' | trans }}</h1>
                            </div><!-- /.col -->

                        </div><!-- /.row -->
                    </div><!-- /.container-fluid -->
                </div>

                <div class="container-fluid">
                    <div>
                        {{ form_start(form) }}
                        {{ form_row(form) }}
                        <button type="submit" class="btn btn-block btn-info">Lancer la recherche</button>
                        {{ form_end(form) }}
                    </div>
                    <div class="mt-4">
                        <ul class="list-group">
                            {% for courseInfo in courseInfosList %}
                                <li class="list-group-item">
                                    <a href="{{ path('app.course_info.view.light_version', {'id': courseInfo.id}) }}" target="_blank">
                                        <span class="badge badge-primary mr-2">{{ courseInfo.course.code }}</span>
                                        {{ courseInfo.title }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}