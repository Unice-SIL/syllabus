{{ form_start(form, {'attr': {'class': 'form-focus'}}) }}
{{ form_errors(form) }}

<div class="mt-3">
    <div>
        {{ form_label(form.educationalResources) }}
        <small class="text-muted">
            {{ 'app.equipment.form.educational_resources_small' | trans }}
        </small>
        {{ form_widget(form.educationalResources) }}
    </div>
    <div class="mt-3">
        {{ form_label(form.bibliographicResources) }}
        <small class="text-muted">
            {{ 'app.equipment.form.bibliographic_resources_small' | trans }}
        </small>
        {{ form_widget(form.bibliographicResources) }}
    </div>
</div>
<div class="mt-2">
    <button type="submit" class="submit-button btn submit button-orange"
            data-url="{{ path('app.course_info.resource_equipment.resources', {'id': courseInfo.id, 'action': 'submit' }) }}">
        {{ 'app.equipment.form.save' | trans }}
    </button>
    <button type="button" class="btn-link btn text-black cancel-button"
            data-url="{{ path('app.course_info.resource_equipment.resources', {'id': courseInfo.id, 'action': 'cancel' }) }}">
        <u>{{ 'app.equipment.form.cancel' | trans }}</u>
    </button>
</div>
{{ form_widget(form._token) }}
{{ form_end(form, {'render_rest': false }) }}

<script>
    $('[data-toggle="tooltip"]').tooltip({
        container: '.content-wrapper'
    });
</script>
