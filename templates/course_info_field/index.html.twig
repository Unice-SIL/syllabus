{% extends 'admin_layout.html.twig' %}
{% set h1 = 'admin.course_info_field.title' | trans %}

{% block subContent %}
    <div class="card">

        <div class="card-body">
            {% if formView.children is not empty %}
                {{ form_start(formView)}}
                <table class="table table-striped table-bordered table-responsive-sm">
                    <thead>
                    <tr>
                        <th>{{ 'app.form.course_info_field.label.label'|trans }}</th>
                        <th>{{ 'app.form.course_info_field.label.mannually_duplication'|trans }}</th>
                        <th>{{ 'app.form.course_info_field.label.automatic_duplication'|trans }}</th>
                        <th>{{ 'app.form.course_info_field.label.import'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for form in formView.children %}
                        <tr>
                            {% if form.children is not empty %}
                            <td>{{ form.vars.label }}</td>
                                <td>
                                    <div class="custom-control custom-switch">
                                        {{ form_widget(form.manuallyDuplication, {'attr' : {
                                            'class' : 'custom-control-input'
                                        } }) }}
                                    </div>
                                </td>
                                <td>
                                    <div class="custom-control custom-switch">
                                        {{ form_widget(form.automaticDuplication, {'attr' : {
                                            'class' : 'custom-control-input'
                                        } }) }}
                                    </div>
                                </td>
                                <td>
                                    <div class="custom-control custom-switch">
                                        {{ form_widget(form.import, {'attr' : {
                                            'class' : 'custom-control-input'
                                        } }) }}
                                    </div>
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="alert alert-info">{{ 'admin.course_info_field.empty_field' | trans }}</div>
            {% endif %}
            <button type="submit" class="btn btn-primary float-right">{{ 'admin.button.save' | trans }}</button>
            {{ form_end(formView) }}
        </div>
    </div>
{% endblock %}