{% extends 'admin_layout.html.twig' %}
{% set h1 = 'Ajouter une activit√©' %}
{% block subContent %}

    <div class="card card-primary">
        <!-- /.card-header -->
        <!-- form start -->
        {{ form_start(form) }}
            <div class="card-body">
                {{ form_row(form.label) }}
                {{ form_row(form.mode) }}
                {% if form.grp is defined %}
                    {{ form_row(form.grp) }}
                {% endif %}
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

