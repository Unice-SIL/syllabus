{% extends 'admin_layout.html.twig' %}
{% set h1 = 'Liste des activités' %}
{% block subContent %}

    <div class="card">
        <div class="card-header">
            {{ form_start(form) }}
                <div class="row ui-front">
                    <div class="col-md-2">
                        {{ form_row(form.label) }}
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <a class="btn btn-danger" style="margin-top: 32px" href="{{  path('app_admin_activity_index')  }}">Réinitialiser les filtres</a>
                    </div>
                        <div class="offset-md-2"></div>
                    <div class="col-md-3 col-sm-6">
                        <a class="btn btn-primary float-right" style="margin-top: 32px" href="{{  path('app_admin_activity_new')  }}">Ajouter une activité</a>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>

        <div class="card-body">
            {% if pagination.totalItemCount > 0 %}
                <table class="table table-bordered table-responsive-sm">
                    <thead>
                    <tr>
                        <th class="sortable">{{ knp_pagination_sortable(pagination, 'app.form.activity.label.label'|trans, 'a.label') }}</th>
                        <th>{{ 'app.form.activity.label.activityTypes'|trans }}</th>
                        <th class="sortable">{{ knp_pagination_sortable(pagination, 'app.form.activity.label.obsolete'|trans, 'a.obsolete') }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for activity in pagination %}
                        <tr>
                            <td>
                                <a href="{{ path('app_admin_activity_edit', { 'id' : activity.id }) }}">{{ activity.label }}</a>
                            </td>
                            <td>
                                {% for activityType in activity.activityTypes %}
                                    {{ not loop.first ? ', ' }}{{ activityType }}
                                {% endfor %}
                            </td>
                            <td>
                                {{ activity.obsolete|humanizeBoolean }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="alert alert-info">Aucune activité n'a été trouvée avec ces critères</div>
            {% endif %}
        </div>
        <!-- /.card-body -->
        {% if knp_pagination_render(pagination) %}
            <div class="card-footer clearfix">
                {{ knp_pagination_render(pagination) }}
            </div>
        {% endif %}
    </div>

{% endblock %}
