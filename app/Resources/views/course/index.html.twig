{% extends 'admin_layout.html.twig' %}
{% set h1 = 'Liste des cours' %}
{% block subContent %}

    <div class="card">
        <div class="card-header">
            {{ form_start(form) }}
            <div class="row ui-front">
                <div class="col-md-2">
                    {{ form_row(form.code) }}
                </div>
                <div class="col-md-2">
                    {{ form_row(form.title) }}
                </div>
                <div class="col-md-2 col-sm-6">
                    <a class="btn btn-danger" style="margin-top: 32px" href="{{  path('app_admin.course_index')  }}">Réinitialiser les filtres</a>
                </div>
                <input type="submit" style="position: absolute; left: -9999px"/>
                <div class="col-md-6 col-sm-6">
                    <a class="btn btn-primary float-right" style="margin-top: 32px" href="{{  path('app_admin.course_new')  }}">Ajouter un cours</a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            {% if pagination.totalItemCount > 0 %}
                <table class="table table-bordered table-responsive-sm">
                    <thead>
                    <tr>
                        <th class="sortable">{{ knp_pagination_sortable(pagination, 'app.form.course.label.code'|trans, 'c.code') }}</th>
                        <th class="sortable">{{ knp_pagination_sortable(pagination, 'app.form.course.label.title'|trans, 'c.title') }}</th>
                        <th class="sortable">{{ knp_pagination_sortable(pagination, 'app.form.course.label.type'|trans, 'c.type') }}</th>
                        <th class="sortable">{{ knp_pagination_sortable(pagination, 'app.form.course.label.synchronized'|trans, 'c.synchronized') }}</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for course in pagination %}
                        <tr>
                            <td><a href="{{ path('app_admin.course_show', { 'id' : course.id }) }}">{{ course.code }}</a></td>
                            <td>{{ course.title }}</td>
                            <td>{{ course.type }}</td>
                            <td>{{ course.synchronized|humanizeBoolean }}</td>
                            <td>
                                <a href="{{ path('app_admin.course_edit', { 'id' : course.id }) }}"
                                   class="btn btn-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="alert alert-info">Aucun cours trouvé pour ces critères</div>
            {% endif %}
        </div>
        <!-- /.card-body -->
        {% if knp_pagination_render(pagination) %}
            <div class="card-footer clearfix">
                {{ knp_pagination_render(pagination) }}
            </div>
        {% endif %}
    </div>

{% endblock %}
