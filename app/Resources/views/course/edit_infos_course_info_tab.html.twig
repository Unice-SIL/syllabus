{% extends 'ajax.html.twig' %}

{% block main %}



    {{ form_start(form) }}

    <div class="d-flex flex-row justify-content-between">
        <div>
            <h3>
                Informations pratiques
            </h3>
        </div>
        <div>
            <button class="btn btn-outline-primary submit" type="submit">
                <i class="fas fa-save"></i>
                Enregistrer
            </button>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col">
            <h6 class="mt-3">
                Indiquer toutes les informations dont vous disposez sur le calendrier du cours, des examens… (facultatif)
            </h6>
            <p>
                Vous pouvez aussi partager un emploi du temps (lien web…).
            </p>
            {{form_widget(form.agenda)}}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <h6 class="mt-3">
                Comment allez-vous organiser votre cours ? (facultatif)
            </h6>
            {{form_widget(form.organization)}}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <button class="btn btn-outline-primary btn-block shadow submit" type="submit">
                <i class="fas fa-save"></i>
                Enregistrer
            </button>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}

{% block javascripts %}
    <script>

        /**
         * Form submission
         */
        $("form[name='edit_infos_course_info']").submit(function(e){
            Syllabus.submitPanelForm( e, this );
        });

    </script>
{% endblock %}