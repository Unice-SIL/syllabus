{% extends 'ajax.html.twig' %}

{% block main %}
    {{ form_start(form) }}

    <div class="row mt-3">
        <div class="col">
            <h6 class="mt-3">
                Indiquer toutes les informations dont vous disposez sur le calendrier du cours, des examens...
            </h6>
            <h6>
                Vous pouvez aussi partager un emploi du temps (image Excel, lien web...)
            </h6>
            {{form_widget(form.agenda)}}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <h6 class="mt-3">
                Comment allez-vous organiser votre cours ?
            </h6>
            {{form_widget(form.organization)}}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <button class="btn btn-outline-primary btn-block shadow submit" type="submit">
                <i class="fas fa-save"></i>
                Enregistrer
            </button>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}

{% block javascripts %}

    <script>
        $(document).ready(function() {

            /**
             * Submit the form
             */
            $("form[name='edit_infos_course_info']").submit(function(e){
                e.preventDefault();

                for ( instance in CKEDITOR.instances ) {
                    CKEDITOR.instances[instance].updateElement();
                }

                var form = $(this)[0];
                var data = new FormData(form);

                SILTools.spinner.fadeIn( {
                    always: function(){
                        $.ajax({
                            type: 'POST',
                            enctype: 'multipart/form-data',
                            processData: false,  // Important!
                            contentType: false,
                            url: '{{ path('save_infos_course_info', { 'id': courseInfo.id })|escape('js') }}',
                            data: data,
                            cache: false,
                            timeout: 600000
                        }).done(function(response){
                            Syllabus.handleAjaxResponse(response);
                        }).always(function(){
                            SILTools.spinner.fadeOut( );
                        });
                    }
                });
            });
        });
    </script>
{% endblock %}