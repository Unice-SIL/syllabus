{% extends 'admin_layout.html.twig' %}
{% set h1 = course.title %}

{% block modals %}
    {{ parent() }}
    {{ include('partial/_add_parent_coure_modal.html.twig') }}
    {{ include('partial/_add_children_coure_modal.html.twig') }}
    {{ include('partial/warning_delete_modal.html.twig') }}
{% endblock %}
{% block subContent %}
    <div class="card card-default">
        <div class="card-header">
            <h3 class="card-title">Informations</h3>
            <a href="{{ path('app.admin.course.edit', {'id': course.id}) }}" class="btn btn-primary float-right">Modifier</a>
        </div>
        <div class="card-body">
            <dl>
                <dt>
                    Type
                </dt>
                <dd>
                    {{ course.type }}
                </dd>
                <dt>
                    Code
                </dt>
                <dd>
                    {{ course.code }}
                </dd>
                <dt>
                    Synchronisé
                </dt>
                <dd>
                    {{ course.synchronized|humanizeBoolean }}
                </dd>
            </dl>
        </div>
    </div>

    {% if is_granted('ROLE_ADMIN_COURSE_INFO_LIST') %}
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Syllabus associés</h3>
                {% if is_granted('ROLE_ADMIN_COURSE_INFO_CREATE') %}
                    <a href="{{ path('app.admin.course.new_course_info', {'id': course.id}) }}" class="btn btn-primary float-right">Ajouter un syllabus</a>
                {% endif %}
            </div>
            <div class="card-body p-0">
                <table class="table table-hover projects">
                    <thead>
                    <tr>
                        <th>
                            Année
                        </th>
                        <th>
                            Titre
                        </th>
                        <th>
                            Strucutre
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for courseInfo in course.courseInfos %}
                        <tr>
                            <td>
                                {{ courseInfo.year }}
                            </td>
                            <td>
                                {% if is_granted('ROLE_ADMIN_COURSE_INFO_UPDATE') %}
                                    <a href="{{ path('app.course_info.dashboard.index', {'id': courseInfo.id}) }}">
                                        {{ courseInfo.title }}
                                    </a>
                                {% else %}
                                    {{ courseInfo.title }}
                                {% endif %}
                            </td>
                            <td>
                                {{ courseInfo.structure }}
                            </td>
                            <td>
                                {% if is_granted('ROLE_ADMIN_COURSE_INFO_UPDATE') %}
                                    <a href="{{ path('app.course_info.dashboard.index', {'id': courseInfo.id }) }}" class="btn btn-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                {% endif %}

                                {% if is_granted('ROLE_ADMIN_COURSE_INFO_UPDATE') %}
                                    <a href="{{ path('app.admin.course_info.edit', {'id': courseInfo.id }) }}" class="btn btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
    {% endif %}

    <hr>

    <div class="card mt-4">
        <div class="card-header">
            <div class="pb-5">
                <h3 class="card-title">Cours parents</h3>
                <button type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#modal-add-parent-course">
                    Attahcer des cours parents
                </button>
            </div>

            {{ _self.courseFilter(filterParentForm, course) }}

        </div>

        {{ _self.courseTable(parentPagination, removeParentCourseForm) }}

        <!-- /.card-body -->
        {% if knp_pagination_render(parentPagination) %}
            <div class="card-footer clearfix">
                {{ knp_pagination_render(parentPagination) }}
            </div>
        {% endif %}
    </div>

    <hr>

    <div class="card mt-4">
        <div class="card-header">
            <div class="pb-5">
                <h3 class="card-title">Cours enfants</h3>
                <button type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#modal-add-children-course">
                    Attahcer des cours enfants
                </button>
            </div>
            {{ _self.courseFilter(filterChildrenForm, course) }}
        </div>

        {{ _self.courseTable(childrenPagination, removeChildrenCourseForm) }}

        <!-- /.card-body -->
        {% if knp_pagination_render(childrenPagination) %}
            <div class="card-footer clearfix">
                {{ knp_pagination_render(childrenPagination) }}
            </div>
        {% endif %}
    </div>

    {% macro courseFilter(form, course) %}
        <div class="border p-3 mb-3">
            <a class="" data-toggle="collapse" href="#collapseFilter-{{ form.vars.name }}" role="button" aria-expanded="false" aria-controls="collapseFilter-{{ form.vars.name }}">
                Filtres
            </a>
            <div class="collapse" id="collapseFilter-{{ form.vars.name }}">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-lg-6 col-md-12">
                        {{ form_row(form.title) }}
                    </div>
                    <div class="col-lg-6 col-md-12">
                        {{ form_row(form.code) }}
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Filtrer</button>
                            <a class="btn btn-danger" href="{{  path('app_admin.course_show', { 'id' : course.id })  }}">Réinitialiser les filtres</a>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    {% endmacro %}

    {% macro courseTable(pagination, removeItemsForm) %}
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                <tr>
                    <th>
                        Titre
                    </th>
                    <th>
                        Code
                    </th>
                    <th>
                        Type
                    </th>
                    <th class="text-right">
                        Action
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for course in pagination %}
                    <tr>
                        <td>
                            {{ course.title }}
                        </td>
                        <td>
                            {{ course.code }}
                        </td>
                        <td>
                            {{ course.type }}
                        </td>
                        <td>
                            {% set removeForm = removeItemsForm.createView %}
                            {{ form_start(removeForm) }}
                            {{ form_widget(removeForm.id, {'attr' : {'value' : course.id}}) }}
                            <button type="button" class="btn btn-danger float-right warning-delete" data-toggle="modal" data-target="#warningDeleteModal">
                                <i class="fas fa-trash"></i> Détacher
                            </button>
                            {{ form_end(removeForm) }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endmacro %}


{% endblock %}
