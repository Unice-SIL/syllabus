<div class="border mt-3 p-2">
    <div class="row mt-3">
        <div class="col">
            <dt>
                Création
            </dt>
            <dd>
                {{ courseInfo.creationDate|date }}
            </dd>
            <dt>
                Publication
            </dt>
            <dd>
                {% if courseInfo.publicationDate is not empty  %}
                    <span class="badge badge-pill badge-success">Publié</span>
                {% else %}
                    <span class="badge badge-pill badge-danger">Non publié</span>
                {% endif %}
            </dd>
        </div>
        <div class="col">
            <dt>
                Dernière modification
            </dt>
            <dd>
                {% if courseInfo.modificationDate is not empty and courseInfo.lastUpdater is not empty %}
                    {{ courseInfo.modificationDate|date }} par {{ courseInfo.lastUpdater }}
                {% endif %}
            </dd>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            {% if courseInfoHelper.canBePublished(courseInfo) %}
            <button class="btn btn-outline-primary btn-block" type="button" id="publishButton">
                {% else %}
                <button class="btn btn-outline-primary btn-block" type="button" id="publishButton" disabled>
                    {% endif %}
                    <i class="fas fa-file-upload"></i>
                    Publier
                </button>
        </div>
    </div>
</div>