
<div class="row mt-3">
    <div class="col">
        <dl>
            <dt>
                Création
            </dt>
            <dd>
                {{ courseInfo.creationDate|localizeddate('full', 'short', 'fr')|capitalize }}
            </dd>
            <dt>
                Dernière modification
            </dt>
            <dd>
                {% if courseInfo.modificationDate is not empty and courseInfo.lastUpdater is not empty %}
                    {{ courseInfo.modificationDate|localizeddate('full', 'short', 'fr')|capitalize }} par {{ courseInfo.lastUpdater.username }}
                {% endif %}
            </dd>
        </dl>
    </div>
    <div class="col">
        <dl>
            <dt>
                Publication
            </dt>
            <dd>
                {% if courseInfo.publicationDate is not empty %}
                    <span class="badge badge-pill badge-success">Publié</span><br>
                    <a target="_blank" href="https://forms.office.com/Pages/ResponsePage.aspx?id=fUQgvFKJzUqD5F1otezkb78RiPD675VPioqx3pigUrJUNUtBRUlZU1lYMUw3NDZGQVEzU1hQNzJaSC4u">
                        <small>Formulaire prime Syllabus</small>
                    </a>
                {% else %}
                    <span class="badge badge-pill badge-danger">Non publié</span>
                {% endif %}
            </dd>
        </dl>
    </div>
</div>
<div class="row">
    <div class="col">
        <dl>
            <dt>
                Etat
            </dt>
            <dd>
                {% set badgePresentationTabClass = 'danger' %}
                {% if courseInfo.isTemPresentationTabValid %}
                    {% set badgePresentationTabClass = 'success' %}
                {% endif %}
                <span class="mx-1 badge badge-{{ badgePresentationTabClass }}">Présentation générale</span>

                {% set badgeActivitiesTabClass = 'danger' %}
                {% if courseInfo.isTemActivitiesTabValid %}
                    {% set badgeActivitiesTabClass = 'success' %}
                {% endif %}
                <span class="mx-1 badge badge-{{ badgeActivitiesTabClass }}">Contenu et activités</span>

                {% set badgeObjectivesTabClass = 'danger' %}
                {% if courseInfo.isTemObjectivesTabValid %}
                    {% set badgeObjectivesTabClass = 'success' %}
                {% endif %}
                <span class="mx-1 badge badge-{{ badgeObjectivesTabClass }}">Objectifs</span>

                {% set badgeMccTabClass = 'danger' %}
                {% if courseInfo.isTemMccTabValid %}
                    {% set badgeMccTabClass = 'success' %}
                {% endif %}
                <span class="mx-1 badge badge-{{ badgeMccTabClass }}">Modalités d'évaluation</span>

                {% set badgeEquipmentsTabClass = 'danger' %}
                {% if courseInfo.isTemEquipmentsTabValid %}
                    {% set badgeEquipmentsTabClass = 'success' %}
                {% endif %}
                <span class="mx-1 badge badge-{{ badgeEquipmentsTabClass }}">Matériel et ressources</span>

                {% set badgeInfosTabClass = 'danger' %}
                {% if courseInfo.isTemInfosTabValid %}
                    {% set badgeInfosTabClass = 'success' %}
                {% endif %}
                <span class="mx-1 badge badge-{{ badgeInfosTabClass }}">Informations pratiques</span>

                {% set badgeClosingRemarksTabClass = 'danger' %}
                {% if courseInfo.isTemClosingRemarksTabValid %}
                    {% set badgeClosingRemarksTabClass = 'success' %}
                {% endif %}
                <span class="mx-1 badge badge-{{ badgeClosingRemarksTabClass }}">Mot de la fin</span>
            </dd>
        </dl>
    </div>
</div>
<div class="row mt-3">
    <div class="col">
    {% if courseInfo.publisher is empty or courseInfo.publicationDate is null %}
        <button class="btn btn-outline-success btn-block shadow"
                id="publishButton"
                type="button"
                {% if not courseInfoHelper.canBePublished(courseInfo) %} disabled {% endif %}>
            <i class="fas fa-eye"></i>
            Publier
        </button>
    {% endif %}
        <div class="btn-group btn-block shadow" role="group">
            <button class="btn btn-outline-secondary"
                    id="adviceButton"
                    type="button">
                <i class="fas fa-comment-dots"></i>
                Demander un avis
            </button>
            <a class="btn btn-outline-secondary"
               href="{{ path('view_student', {'id': courseInfo.id}) }}"
               title="La page s'ouvrira dans un nouvel onglet."
               target="_blank">
                <i class="fas fa-graduation-cap"></i>
                Voir la version étudiante
            </a>
        </div>
    </div>
</div>
