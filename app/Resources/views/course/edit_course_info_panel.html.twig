
<div class="row mt-3">
    <div class="col">
        <dt>
            Création
        </dt>
        <dd>
            {{ courseInfo.creationDate|date }}
        </dd>
        <dt>
            Publication
        </dt>
        <dd>
            {% if courseInfo.publicationDate is not empty  %}
                <span class="badge badge-pill badge-success">Publié</span>
            {% else %}
                <span class="badge badge-pill badge-danger">Non publié</span>
            {% endif %}
        </dd>
    </div>
    <div class="col">
        <dt>
            Dernière modification
        </dt>
        <dd>
            {% if courseInfo.modificationDate is not empty and courseInfo.lastUpdater is not empty %}
                {{ courseInfo.modificationDate|date }} par {{ courseInfo.lastUpdater }}
            {% endif %}
        </dd>
    </div>
</div>
<div class="row mt-3">
    <div class="col">
        <button class="btn btn-outline-primary btn-block shadow" type="button" id="publishButton"
                {% if not courseInfoHelper.canBePublished(courseInfo) %}
                    disabled
                {% endif %}
        >
            <i class="fas fa-eye"></i>
            Publier
        </button>
        <button class="btn btn-outline-primary btn-block shadow" type="button" id="studentViewButton">
            <i class="fas fa-graduation-cap"></i>
            Voir la version étudiante
        </button>
    </div>
</div>
