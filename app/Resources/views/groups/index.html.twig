{% extends 'admin_layout.html.twig' %}
{% set h1 = 'admin.group.list_groups' | trans %}

{% block modals %}
    {{ parent() }}
    {{ include('partial/warning_delete_modal.html.twig') }}
{% endblock %}


{% block subContent %}

    <div class="card">
        <div class="card-header">
            {{ form_start(form) }}
            <div class="row ui-front">
                <div class="col-md-2">
                    {{ form_row(form.label) }}
                </div>
                <div class="col-md-2 col-sm-6">
                    <a class="btn btn-danger" style="margin-top: 32px" href="{{  path('app_admin_groups_index')  }}">{{ 'admin.button.reset_filters' | trans }}</a>
                </div>
                <input type="submit" style="position: absolute; left: -9999px"/>
                <div class="col-md-8 col-sm-8">
                    <a class="btn btn-primary float-right" style="margin-top: 32px" href="{{  path('app_admin_groups_new')  }}">{{ 'admin.button.add_group' | trans }}</a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            {% if pagination.totalItemCount > 0 %}
                <table class="table table-bordered table-responsive-sm">
                    <thead>
                    <tr>
                        <th class="sortable">{{ knp_pagination_sortable(pagination, 'app.form.groups.label.label'|trans, 'g.label') }}</th>
                        <th class="sortable">{{ knp_pagination_sortable(pagination, 'app.form.groups.label.obsolete'|trans, 'g.obsolete') }}</th>
                        <th>{{ 'admin.group.actions' | trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for groups in pagination %}
                        <tr>
                            <td><a href="{{ path('app_admin_groups_edit', { 'id' : groups.id }) }}">{{ groups.label }}</a></td>
                            <td>{{ groups.obsolete|humanizeBoolean }}</td>
                            <td>
                                {% set deleteFormView = deleteFormsView[groups.id] %}
                                {{ form_start(deleteFormView) }}
                                    <button type="button" class="btn btn-danger float-right warning-delete" data-toggle="modal" data-target="#warningDeleteModal">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                {{ form_end(deleteFormView) }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                {% include 'partial/_no_element.html.twig' %}
            {% endif %}
        </div>
        <!-- /.card-body -->
        {% if knp_pagination_render(pagination) %}
            <div class="card-footer clearfix">
                {{ knp_pagination_render(pagination) }}
            </div>
        {% endif %}
    </div>

{% endblock %}
