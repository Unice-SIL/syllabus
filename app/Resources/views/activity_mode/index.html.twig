{% extends 'admin_layout.html.twig' %}
{% set h1 = 'Liste des modes d\'activités' %}
{% block subContent %}

    <div class="card">
        <div class="card-header">

        </div>
        <input type="submit" style="position: absolute; left: -9999px"/>
        <div class="card-body">

            <div class="d-flex justify-content-end pb-3">
                {% include 'action/_activity_mode_create.html.twig' %}
            </div>

            <div class="border p-3 mb-3">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-lg-6 col-md-12">
                        {{ form_row(form.label) }}
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Filtrer</button>
                            <a class="btn btn-danger" href="{{  path('app.admin.activity_mode.index')  }}">Réinitialiser les filtres</a>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>

            {% if pagination.totalItemCount > 0 %}
                <table class="table table-hover table-responsive-sm">
                    <thead>
                    <tr>
                        <th class="sortable">{{ knp_pagination_sortable(pagination, 'app.form.equipment.label.label'|trans, 'e.label') }}</th>
                        <th class="sortable">{{ knp_pagination_sortable(pagination, 'app.form.equipment.label.obsolete'|trans, 'e.obsolete') }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for activityMode in pagination %}
                        <tr>
                            <td>
                                <a href="{{ path('app.admin.activity_mode.edit', { 'id' : activityMode.id }) }}">{{ activityMode.label }}</a>
                            </td>
                            <td>{{ activityMode.obsolete|humanizeBoolean }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="alert alert-info">Aucun type de mode d'activité ne correspond à ces critères</div>
            {% endif %}
        </div>
        <!-- /.card-body -->
        {% if knp_pagination_render(pagination) %}
            <div class="card-footer clearfix">
                {{ knp_pagination_render(pagination) }}
            </div>
        {% endif %}
    </div>
{% endblock %}

