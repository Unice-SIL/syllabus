{% extends 'admin_layout.html.twig' %}
{% set h1 = 'Liste des crons' %}

{% block modals %}
    {{ parent() }}
    {{ include('partial/warning_delete_modal.html.twig') }}
{% endblock %}


{% block subContent %}

    <div class="card">
        <div class="card-header">
            {{ form_start(form) }}
            <div class="row ui-front">
                <div class="col-md-2">
                    {{ form_row(form.label) }}
                </div>
                <div class="col-md-2 col-sm-6">
                    <a class="btn btn-danger" style="margin-top: 32px" href="{{  path('app.admin.cron.index')  }}">Réinitialiser les filtres</a>
                </div>
                <input type="submit" style="position: absolute; left: -9999px"/>
                <div class="col-md-8 col-sm-8">
                    <a class="btn btn-primary float-right" style="margin-top: 32px" href="{{ path('app.admin.cron.new') }}">Ajouter un cron</a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            {% if pagination.totalItemCount > 0 %}
                <table class="table table-bordered table-responsive-sm">
                    <thead>
                    <tr>
                        <th class="sortable">{{ knp_pagination_sortable(pagination, 'Label', 'c.label') }}</th>
                        <th class="sortable">{{ knp_pagination_sortable(pagination, 'Import', 'c.command') }}</th>
                        <th class="sortable">{{ knp_pagination_sortable(pagination, 'Statut', 'c.lastStatus') }}</th>
                        <th class="sortable">{{ knp_pagination_sortable(pagination, 'Date d\'excecution', 'c.lastUseStart') }}</th>
                        <th class="sortable">{{ knp_pagination_sortable(pagination, 'Fin d\'excecution', 'c.lastUseEnd') }}</th>
                        <th class="sortable">{{ knp_pagination_sortable(pagination, 'Fréquence', 'c.frequencyCronFormat') }}</th>
                        <th class="sortable">{{ knp_pagination_sortable(pagination, 'Immédiat', 'c.immediately') }}</th>
                        <th >Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for cron in pagination %}
                        <tr class="{{ cron.obsolete ? 'bg-warning' }}">
                            <td><a href="{{ path('app.admin.cron.edit', { 'id' : cron.id }) }}">{{ cron.label }}</a></td>
                            <td>{{ cron.command }} {{ cron.obsolete ? '(Cette commande n\'existe plus)' }}</td>
                            <td>{{ ('app.const.cron.status.'~cron.lastStatus)|trans }}</td>
                            <td>
                                {%  if cron.lastUseStart %}
                                    le {{ cron.lastUseStart|date('d-m-Y à h-i-s') }}
                                {% endif %}
                            </td>
                            <td>
                                {%  if cron.lastUseEnd %}
                                    le {{  cron.lastUseEnd|date('d-m-Y à h-i-s') }}
                                {% endif %}
                            </td>
                            <td>{{ cron.frequencyCronFormat }}</td>
                            <td>{{ cron.immediately|humanizeBoolean }}</td>
                            <td>
                                {% if cron.lastStatus == constant('AppBundle\\Constant\\Cron::STATUS_IN_PROGRESS') %}
                                    <button class="btn btn-primary disabled">Rapport</button>
                                    <button class="btn btn-primary disabled">Executer</button>
                                    <button class="btn btn-danger disabled"><i class="fas fa-trash"></i></button>
                                {% else %}
                                    <a href="{{ path('app.admin.cron.report', {'id': cron.id}) }}" class="btn btn-primary">Rapport</a>
                                    <form method="POST" action="{{ path('app.admin.cron.run_command', {'id' :cron.id}) }}" class="d-inline">
                                        <button href="{{ path('app.admin.cron.run_command', {'id': cron.id}) }}" class="btn btn-primary">Executer</button>
                                        <input type="hidden" name="_token" value="{{ csrf_token('cron' ~ cron.id) }}">
                                    </form>
                                    {% set deleteFormView = deleteFormsView[cron.id] %}
                                    {{ form_start(deleteFormView, {'attr' : {'class' : 'd-inline'}}) }}
                                    <button type="button" class="btn btn-danger warning-delete" data-toggle="modal" data-target="#warningDeleteModal">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                    {{ form_end(deleteFormView) }}
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="alert alert-info">Aucun cron n'a été enregistré</div>
            {% endif %}
        </div>
        <!-- /.card-body -->
        {% if knp_pagination_render(pagination) %}
            <div class="card-footer clearfix">
                {{ knp_pagination_render(pagination) }}
            </div>
        {% endif %}
    </div>

{% endblock %}
