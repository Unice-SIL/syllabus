{% extends 'course_info/layout.html.twig' %}

{% block subContent %}

    <div id="card-achievement" class="card my-2 shadow card-syllabus"
         data-view-url="{{ path('objective_course_achievement_view', {'id': courseInfo.id }) }}"
    >
        <div class="card-header">
            <div class="d-flex justify-content-between">
                <h3>Capacités visées / acquis d'apprentissage</h3>
                <button type="button"
                        class="btn btn-primary rounded modal-action"
                        data-action-title="Ajouter une compétence"
                        data-action-url="{{ path('objective_course_achievement', {'id': courseInfo.id }) }}">
                    Ajouter une compétence
                </button>
            </div>
            <a href="https://lms.univ-cotedazur.fr/course/view.php?id=22948"
               class="btn btn-outline-info btn-sm btn-block mt-2"
               target="_blank">
                Cours dédié à l'« Approche par Compétences » (auto inscription)
            </a>
        </div>
        <div class="card-body">
        </div>
    </div>

    <div id="card-prerequisite" class="card my-2 shadow card-syllabus"
         data-view-url="{{ path('objective_course_prerequisite_view', {'id': courseInfo.id }) }}"
    >
        <div class="card-header">
            <div class="d-flex justify-content-between">
                <h3>Prérequis</h3>
                <button type="button" class="btn btn-primary modal-action rounded"
                        data-action-title="Ajouter un prérequis"
                        data-action-url="{{ path('objective_course_prerequisite', {'id': courseInfo.id }) }}">
                    Ajouter un prérequis
                </button>
            </div>
        </div>
        <div class="card-body">
        </div>
    </div>

    <div id="card-tutoring-resources" class="card my-2 shadow card-syllabus"
         data-view-url="{{ path('objective_course_tutoring_resources_view', {'id': courseInfo.id }) }}"
    >
        <div class="card-header">
            <div class="d-flex justify-content-between">
                <h3>Remédiation / aide à la réussite</h3>
                <button type="button" class="btn btn-primary modal-action rounded "
                        data-action-title="Ajouter une remédiation"
                        data-card="card-tutoring-resources"
                        data-action-url="{{ path('objective_course_tutoring_resources', {'id': courseInfo.id }) }}">
                    Ajouter une remédiation
                </button>
            </div>
            <div class="d-flex my-2">
                <span class="align-text-bottom mt-1">Assister à des séances de tutorat :</span>
                <div class="ml-2">
                    <input type="checkbox" data-toggle="toggle" data-style="ios" id="btn_tutoring" data-on="Oui"
                           data-off="non"
                           data-action-title="Ajouter une compétence"
                           data-action-url="{{ path('objective_course_tutoring', {'id': courseInfo.id }) }}"
                            {% if courseInfo.tutoring %}
                                checked
                            {% endif %}
                    >
                </div>
            </div>
            <div class="border p-2 d-inline-block position-relative" id="assistTutoring">
                <button type="button"
                        class="btn btn-link modal-action p-0 position-absolute"
                        style="top: 0px; right: 0px"
                        data-action-title="Ajouter une compétence"
                        data-action-url="{{ path('objective_course_tutoring', {'id': courseInfo.id }) }}">
                    <i class="fas fa-edit"></i>
                </button>
                <div class="mr-4">
                    {% if courseInfo.tutoringTeacher == 1 %}
                        <i class="fas fa-check text-success"></i>
                    {% else %}
                        <i class="fas fa-times text-danger"></i>
                    {% endif %}
                    <span>Avec tuteur enseignant</span>
                </div>
                <div>
                    {% if courseInfo.tutoringStudent == 1 %}
                        <i class="fas fa-check text-success"></i>
                    {% else %}
                        <i class="fas fa-times text-danger"></i>
                    {% endif %}
                    <span class="ml-1">Avec tuteur étudiant</span>
                </div>
                <div class="mt-2">
                    <span>{{ courseInfo.tutoringDescription }}</span>
                </div>
            </div>
        </div>
        <div class="card-body">
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('#menu-objectives_course').addClass('active');
            $('#menu-objectives_course').addClass('border-bottom-3 border-white');

            $('#btn_tutoring').change(function () {
                let checkedValue = $(this).prop('checked');

                if (checkedValue === true) {
                    $('#assistTutoring').show();
                    let $modal_app = $('#modal_app');
                    let $modal_app_title = $('#modal_app_title');
                    let $modal_app_body = $('#modal_app_body');
                    let title = $(this).data('action-title');
                    let url = $(this).data('action-url');
                    let event = $(this).data('action-event');
                    Syllabus.handleModalAction($modal_app, $modal_app_title, $modal_app_body, title, url, event)
                }else {
                    console.log('test');
                    $('#assistTutoring').hide();
                }
            });
        });


    </script>
{% endblock %}