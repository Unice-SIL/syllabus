{{ form_start(form, {'attr': {'class': 'modal-action-form', 'data-action-url': path('objective_course_achievement', {'id': courseInfo.id })}}) }}
<div class="card border-primary card-syllabus toggle-focus my-2 shadow active">
    {{ form_start(form, {'attr': {'class': 'form-focus'}}) }}
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <h3>Capacités visées / acquis d'apprentissage</h3>
        </div>
    </div>
    <div class="card-body">
        {{ form_errors(form) }}
        <div class="mt-3">
            <div>
                <label>À la fin de ce cours, l'étudiant devrait être capable de…</label>
                {% if form.description is defined %}
                    {{ form_widget(form.description) }}
                {% endif %}
            </div>
        </div>
        <div class="d-flex justify-content-center mt-3">
            <button type="submit" class="btn btn-primary rounded" id="create_button">
                Ajouter
            </button>
        </div>
    </div>
    {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': false }) }}
</div>