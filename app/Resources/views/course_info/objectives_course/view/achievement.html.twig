{% if courseInfo.courseAchievements is empty %}
    <div class="card-body">
        <div class="row mt-10">
            <div class="col">
                <div class="d-flex">
                    <div class="d-flex flex-column">
                            <span class="font-weight-bold">
                                <i class="fas fa-exclamation-circle text-danger"></i>
                                Compétence
                            </span>
                        <span class="text-danger">
                                Non-renseigné
                            </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="card-body table-responsive p-0">
        <table class="table table-hover">
            <thead>
            <tr>
                <th class="text-left" style="width: 80%">Description</th>
                <th class="text-center" style="width: 20%">Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for achievement in courseInfo.courseAchievements %}
                <tr>
                    <td class="text-left">{{ achievement.description }}</td>
                    <td class="text-center">
                        <button type="button" class="btn btn-link modal-action p-0"
                                data-action-title="Supprimer une compétence"
                                data-action-url="{{ path('objective_course_remove_achievement', {'id': courseInfo.id, 'achievementId': achievement.id}) }}">
                            <i class="fas fa-trash-alt text-danger"></i>
                        </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}