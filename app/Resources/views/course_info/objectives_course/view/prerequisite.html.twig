<div class="card toggle-focus my-2 shadow card-syllabus">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <h3>Prérequis</h3>
            <button type="button"
                    class="btn btn-primary button-gradient modal-action"
                    data-action-title="Ajouter un prérequis"
                    data-action-url="{{ path('objective_course_prerequisite', {'id': courseInfo.id }) }}">
                Ajouter un prérequis
            </button>
        </div>
        <span class="font-weight-bold">Avant le début du cours, l'étudiant doit…</span>
    </div>
    {% if courseInfo.coursePrerequisites is empty %}
        <div class="card-body">
            <div class="row mt-10">
                <div class="col">
                    <div class="d-flex">
                        <div class="d-flex flex-column">
                            <span class="font-weight-bold">
                                <i class="fas fa-exclamation-circle text-danger"></i>
                                Prérequis
                            </span>
                            <span class="text-danger">
                                Non-renseigné
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="card-body table-responsive p-0">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th class="text-left" style="width: 80%">Description</th>
                    <th class="text-center" style="width: 20%">Supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for prerequisite in courseInfo.coursePrerequisites %}
                    <tr>
                        <td class="text-left">{{ prerequisite.description }}</td>
                        <td class="text-center">
                            <button type="button" class="btn btn-link modal-action p-0"
                                    data-action-title="Supprimer un prérequis"
                                    data-action-url="{{ path('objective_course_remove_prerequisite', {'id': courseInfo.id, 'prerequisiteId': prerequisite.id}) }}">
                                <i class="fas fa-trash-alt text-danger"></i>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>