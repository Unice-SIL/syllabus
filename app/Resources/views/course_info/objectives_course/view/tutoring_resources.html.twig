<div class="card toggle-focus my-2 shadow card-syllabus">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <h3>Remédiation / aide à la réussite</h3>
            <button type="button" class="btn btn-primary button-gradient modal-action"
                    data-action-title="Ajouter un enseignant"
                    data-action-url="{{ path('course_presentation_teachers', {'id': courseInfo.id }) }}">
                Ajouter une remédiation
            </button>
        </div>
        <span class="font-weight-bold">Si l'étudiant rencontre des difficultés, il peut…</span>
        <div class="d-flex mt-3">
            <span class="align-text-bottom mt-1">Assister à des séances de tutorat :</span>
            <div class="ml-2">
                <style>
                    .toggle.ios, .toggle-on.ios, .toggle-off.ios {
                        border-radius: 20px;
                    }

                    .toggle.ios .toggle-handle {
                        border-radius: 20px;
                    }
                </style>
                <input type="checkbox" checked data-toggle="toggle" data-style="ios">
            </div>
        </div>
    </div>
    {% if courseInfo.courseTutoringResources is empty %}
        <div class="card-body">
            <div class="row mt-10">
                <div class="col">
                    <div class="d-flex">
                        <div class="d-flex flex-column">
                            <span class="font-weight-bold">
                                <i class="fas fa-exclamation-circle text-danger"></i>
                                Équipe enseignante
                            </span>
                            <span class="text-danger">
                                Non-renseigné
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="card-body table-responsive p-0">
            <table class="table table-hover">
                <tbody>
                <thead>
                <tr>
                    <th class="text-left" style="width: 80%">Description</th>
                    <th class="text-center" style="width: 20%">Supprimer</th>
                </tr>
                </thead>
                {% for tutoringResources in courseInfo.courseTutoringResources %}
                    <tr class="text-center">
                        <td class="text-left">{{ tutoringResources.description }}</td>
                        <td class="text-center">
                            <button type="button" class="btn btn-link modal-action p-0"
                                    data-action-title="Supprimer un enseignant">
                                <i class="fas fa-trash-alt text-danger"></i>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>