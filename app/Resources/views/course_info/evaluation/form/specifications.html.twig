<div class="card border-primary card-syllabus toggle-focus my-2 shadow active">
    {{ form_start(form, {'attr': {'class': 'form-focus'}}) }}
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <h3>Synopsis</h3>
        </div>
    </div>
    <div class="card-body">
        {{ form_errors(form) }}
        <label class="required font-weight-bold">
            Précisions (facultatif)
        </label>
        <small class="text-muted">
            Exemple : informations sur les examens, le plagiat, matériels interdits, pénalités de retard, d'absences, d'orthographe, …
        </small>
        {{ form_errors(form.mccAdvice) }}
        {{ form_widget(form.mccAdvice) }}
        <div class="mt-2">
            <button type="submit" class="focus-submit btn btn-primary submit button-gradient" data-url="{{ path('course_evaluation_specifications', {'id': courseInfo.id, 'action': 'submit' }) }}">
                Sauvegarder
            </button>
            <button type="button" class="focus-cancel btn btn-secondary button-gradient" data-url="{{ path('course_evaluation_specifications', {'id': courseInfo.id, 'action': 'cancel' }) }}">
                Annuler
            </button>
        </div>
    </div>
    {{ form_widget(form._token) }}
    {{ form_end(form) }}
</div>