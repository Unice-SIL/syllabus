<script>
    $(document).ready(function () {
        toggleTeachingMode();

        $(document).on('change', '#teaching_mode_teachingMode', function () {
            toggleTeachingMode();
        });

        function toggleTeachingMode() {
            let value = $('#teaching_mode_teachingMode').find('input[type="radio"]:checked').val();

            $('.teaching-mode').addClass('d-none');
            $('.teaching-mode-' + value).removeClass('d-none');
        }
    })
</script>