<div class="card border-primary card-syllabus toggle-focus my-2 shadow active">
    {{ form_start(form) }}
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <h3>Général</h3>
        </div>
    </div>
    <div class="card-body">
        {{ form_errors(form) }}
        <div class="row mt-3">
            <div class="col">
                {{ form_widget(form.period) }}
                <label placeholder="Période (facultatif)"></label>
                {{ form_errors(form.domain) }}
                {{ form_widget(form.domain) }}
                <label placeholder="* Domaine"></label>
                {{ form_widget(form.languages) }}
                <label placeholder="En quelle(s) langue(s) est dispensé ce cours (facultatif)"></label>
            </div>
            <div class="col">
                <label class="required font-weight-bold">
                    Quel est le niveau de ce cours ?
                    <img id="infos_level" src="{{ asset('images/info_32.png') }}" style="cursor: pointer;">
                </label>
                {{ form_errors(form.level) }}
                {{ form_widget(form.level, {label_attr: {class: 'radio-custom'} }) }}
            </div>
        </div>
        <div class="mt-2">
            <button type="submit" class="focus-submit btn btn-primary submit button-gradient" data-url="{{ path('course_presentation_general', {'id': courseInfo.id, 'action': 'submit' }) }}">
                Sauvegarder
            </button>
            <button type="button" class="focus-cancel btn btn-secondary button-gradient" data-url="{{ path('course_presentation_general', {'id': courseInfo.id, 'action': 'cancel' }) }}">
                Annuler
            </button>
        </div>
    </div>
    {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': false }) }}
</div>

