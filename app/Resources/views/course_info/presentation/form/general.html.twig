<div class="card toggle-focus my-2 shadow">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <h3>Général</h3>
            <button type="button" class="update-focus btn btn-primary">Mettre à jour</button>
        </div>
    </div>
    <div class="card-body">
        <div class="row mt-3">
            <div class="col">
                {{ form_widget(form.period) }}
                <label placeholder="Période (facultatif)"></label>
                {{ form_errors(form.domain) }}
                {{ form_widget(form.domain) }}
                <label placeholder="Domaine *"></label>
                {{ form_widget(form.languages) }}
                <label placeholder="En quelle(s) langue(s) est dispensé ce cours (facultatif)"></label>
            </div>
            <div class="col">
                <h6>
                    Quel est le niveau de ce cours ? *
                    <img id="infos_level" src="{{ asset('images/info_32.png') }}" style="cursor: pointer;">
                </h6>
                {{ form_errors(form.level) }}
                <ul>
                    {{ form_widget(form.level) }}
                </ul>
            </div>
        </div>
    </div>
</div>