{{ form_start(form) }}
<div class="card toggle-focus my-2 shadow">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <h3>Équipe enseignante</h3>
        </div>
    </div>
    <div class="card-body">
        {{ form_errors(form) }}
        <div class="row mt-3">
            <div class="col">
                <div class="row mb-3">
                    <div class="col">
                        <label class="required font-weight-bold">Qui fait partie de l'équipe enseignante ?</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        {{ form_widget(form.teacherSearch) }}
                    </div>
                    <div class="col-4">
                        {{ form_widget(form.teacherSource) }}
                        <label placeholder="Source"></label>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_errors(form.courseTeachers) }}
                        {{ form_widget(form.courseTeachers) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-2">
            <button class="update-focus btn btn-primary submit" type="submit">
                Sauvegarder
            </button>
            <button type="button" class="update-focus btn btn-secondary">
                Annuler
            </button>
        </div>
    </div>
</div>
{{ form_widget(form._token) }}
{{ form_end(form, {'render_rest': false }) }}