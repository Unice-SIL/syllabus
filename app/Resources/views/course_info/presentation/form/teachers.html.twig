<div class="card toggle-focus my-2 shadow">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <h3>Équipe enseignante</h3>
            <button type="button" class="update-focus btn btn-primary">Mettre à jour</button>
        </div>
    </div>
    <div class="card-body">

        <div class="row mt-3">
            <div class="col">
                <div class="row mb-3">
                    <div class="col">
                        <strong>Qui fait partie de l'équipe enseignante ?</strong>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        {{ form_widget(form.teacherSearch) }}
                    </div>
                    <div class="col-4">
                        {{ form_widget(form.teacherSource) }}
                        <label placeholder="Source"></label>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_errors(form.courseTeachers) }}
                        {{ form_widget(form.courseTeachers) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>