<div class="card toggle-focus my-2 shadow card-syllabus">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <h3>Équipe enseignante</h3>
            <button type="button" class="btn btn-primary button-gradient modal-syllabus" data-toggle="modal" data-target="#syllabusModal" data-url="{{ path('modal_syllabus', {'path': 'course_info/') }}">Ajouter</button>
        </div>
    </div>
    {% if courseInfo.courseTeachers is empty %}
        <div class="card-body">
            <div class="row mt-3">
                <div class="col">
                    <div class="d-flex">
                        <div class="d-flex flex-column">
                            <span class="font-weight-bold">
                                <i class="fas fa-exclamation-circle text-danger"></i>
                                Équipe enseignante
                            </span>
                            <span class="text-danger">
                                Non-renseigné
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="card-body table-responsive p-0">
            <table class="table table-hover">
                <thead>
                <tr class="text-center">
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Responsable</th>
                    <th>Supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for teacher in courseInfo.courseTeachers %}
                    <tr class="text-center">
                        <td>{{ teacher.lastname }}</td>
                        <td>{{ teacher.firstname }}</td>
                        <td>
                            {% if teacher.emailVisibility %}
                                Visible
                            {% else %}
                                Invisible
                            {% endif %}
                        </td>
                        <td>
                            {% if teacher.manager %}
                                Oui
                            {% else %}
                                Non
                            {% endif %}
                        </td>
                        <td>
                            <a href="#">
                                <i class="fas fa-trash-alt text-danger"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>