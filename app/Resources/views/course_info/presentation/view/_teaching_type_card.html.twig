{% if type is not defined %}
    {% set type = 'primary' %}
    {% if darkCard is defined %}
        {% set type = 'danger' %}
    {% endif %}
{% endif %}
<div class="info-box border rounded shadow {% if darkCard is defined %}{{ darkCard }}{% endif %}">
    <span class="info-box-icon bg-{{ type }}">
        <i class="fas fa-clock"></i>
    </span>
    <div class="info-box-content">
        <span class="info-box-text">{{ teachingTypeText | trans }}</span>
        <span class="info-box-number">{{ teachingTypeHours }}H</span>
    </div>
</div>