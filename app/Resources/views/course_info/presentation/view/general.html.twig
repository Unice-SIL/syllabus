<div class="card toggle-focus my-2 shadow">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <h3>Général</h3>
            <button type="button" class="update-focus btn btn-primary">Mettre à jour</button>
        </div>
    </div>
    <div class="card-body">
        <div class="row mt-3">
            <div class="col">
                <div class="d-flex">
                    <div class="d-flex flex-column">
                        <span class="font-weight-bold">
                            {% if courseInfo.period is null %}
                                <i class="fas fa-exclamation-circle text-danger"></i>
                            {% endif %}
                            Période
                        </span>
                        {% if courseInfo.period is null %}
                            <span class="text-danger">
                                Non-renseigné
                            </span>
                        {% else %}
                            <span class="text-muted">
                                {{ courseInfo.period }}
                            </span>
                        {% endif %}
                    </div>
                </div>
                <div class="d-flex">
                    <div class="d-flex flex-column">
                        <span class="font-weight-bold">
                            {% if courseInfo.domain is null %}
                                <i class="fas fa-exclamation-circle text-danger"></i>
                            {% endif %}
                            Domaine
                        </span>
                        {% if courseInfo.domain is null %}
                            <span class="text-danger">
                                Non-renseigné
                            </span>
                        {% else %}
                            <span class="text-muted">
                                {{ courseInfo.domain }}
                            </span>
                        {% endif %}
                    </div>
                </div>
                <div class="d-flex">
                    <div class="d-flex flex-column">
                        <span class="font-weight-bold">
                            {% if courseInfo.languages is null %}
                                <i class="fas fa-exclamation-circle text-danger"></i>
                            {% endif %}
                            Langues
                        </span>
                        {% if courseInfo.languages is null %}
                            <span class="text-danger">
                                Non-renseigné
                            </span>
                        {% else %}
                            <span class="text-muted">
                                {{ courseInfo.languages }}
                            </span>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="d-flex">
                    <div class="d-flex flex-column">
                        <span class="font-weight-bold">
                            {% if courseInfo.level is null %}
                                <i class="fas fa-exclamation-circle text-danger"></i>
                            {% endif %}
                            Niveau du cours
                        </span>
                        <span class="text-muted">
                            {% if courseInfo.level is null %}
                                Non-renseigné
                            {% else %}
                                {% for key, value in constant("AppBundle\\Constant\\Level::CHOICES") %}
                                    {% if courseInfo.level is same as(value) %}
                                        {{ key }}
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>