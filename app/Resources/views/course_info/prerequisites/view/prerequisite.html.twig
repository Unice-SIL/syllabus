{% if courseInfo.coursePrerequisites is empty %}

    <div class="row mt-10">
        <div class="col">
            <div class="d-flex">
                <div class="d-flex flex-column">
                            <span class="font-weight-bold">
                                <i class="fas fa-exclamation-circle text-danger"></i>
                                Prérequis
                            </span>
                    <span class="empty-data">Aucun prérequis renseigné</span>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <table class="table table-hover">
        <thead>
        <tr>
            <th class="text-left" style="width: 80%">Description</th>
            <th class="text-center" style="width: 20%">Modifier/Supprimer</th>
        </tr>
        </thead>
        <tbody id="prerequisites-list" class="list-sortable" data-url="{{ path('app.course_info.prerequisites.sort_prerequisites', {'id': courseInfo.id}) }}">
        {% for prerequisite in courseInfo.coursePrerequisites %}
            <tr class="item-sortable" data-id="{{ prerequisite.id }}">
                <td class="text-left">{{ prerequisite.description }}</td>
                <td class="text-center">
                    <button type="button"
                            class="btn btn-link modal-action p-0"
                            data-action-title="Modifier un prérequis"
                            data-action-url="{{ path('app.course_info.prerequisite.edit', {'id': prerequisite.id}) }}">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button type="button" class="btn btn-link modal-action p-0"
                            data-action-title="Supprimer un prérequis"
                            data-action-url="{{ path('app.course_info.prerequisite.delete', {'id': prerequisite.id}) }}">
                        <i class="fas fa-trash-alt text-danger"></i>
                    </button>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endif %}


<script>
    if ($('#prerequisites-list').length)
    {
        Syllabus.sortable($('#prerequisites-list'));
    }
</script>