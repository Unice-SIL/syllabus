<input type="image" width="30px" height="30px" src="/build/images/distanciel_picto.png">
<span style="border-bottom: solid white; border-width:0 1px ;">{{ 'app.view.student.presentation.distant' | trans }}</span>
<ul class="text-primary" style="padding-left:0px;">
    {% if courseInfo.teachingCmDist is not null %}
        <li class="li-valid"><i class="fas fa-check text-primary"></i> {{ 'app.view.student.presentation.hours_cm' | trans({'%hours%': courseInfo.teachingCmDist}) }}</li>
    {% endif %}
    {% if courseInfo.teachingTdDist is not null %}
        <li class="li-valid"><li class="li-valid"><i class="fas fa-check text-primary"></i> {{ 'app.view.student.presentation.hours_td' | trans({'%hours%': courseInfo.teachingTdDist}) }}</li>
    {% endif %}
    {% for teaching in courseInfo.teachings %}
        <li class="li-valid"><li class="li-valid"><i class="fas fa-check text-primary"></i> {{ 'app.view.student.presentation.hours_teachings' | trans({'%hours%': teaching.hourlyVolume, '%type%': teaching.type}) }}</li>
    {% endfor %}
</ul>