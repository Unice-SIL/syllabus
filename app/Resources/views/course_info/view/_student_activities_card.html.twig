<div class="card bg-dark">
    <div class="card-body">
        <div class="row">
            <div class="col-sm-2">
                <div class="text-center">
                    <img src="{{ asset('images/activity_in_class_white_64.png') }}">
                </div>
            </div>
            <div class="col-sm">
                <span class="text-bold">{{ activityType }}</span>
                <div>
                    {% for act in activities %}
                        <span>
                        {{ act.activity.label }} ({{ act.activityMode }})
                            {% if act.description is not null %}
                                : {{ act.description }}
                            {% endif %}
                      </span>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>