{% if courseInfo.mccAdvice is not null %}
    <section id="evaluation-section" class="content">
        <div class="container-fluid">
            <div class="card my-2 shadow">
                <div class="card-header">
                    <div class="d-flex justify-content-between">
                        <h3  class="text-shadow" style="font-weight: 500;">{{ 'app.view.student.tabs.evaluation' | trans }}</h3>
                    </div>
                </div>
                <div class="card-body">
                    <dl>
                        <dd>
                            {{ courseInfo.mccAdvice | humanizeEmptyData() | purify }}
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </section>
{% endif %}