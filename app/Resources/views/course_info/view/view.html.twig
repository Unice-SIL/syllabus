{% extends 'base_homepage.html.twig' %}
{% block navbar %}
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
        </li>
    </ul>
{% endblock %}

{% block sidebar %}
    {% include 'course_info/view/student_sidebar.html.twig' %}
{% endblock %}

{% block content %}
        <section id="presentation-section" class="content">
            <div class="container-fluid">
                <div class="card my-2 shadow">
                    <div class="card-header">
                        <div class="d-flex justify-content-between">
                            <h3  class="text-shadow" style="font-weight: 500;">{{ 'app.view.student.tabs.presentation' | trans }}</h3>
                        </div>
                    </div>
                    <div class="card-body">
                        {% include 'course_info/view/student_presentation.html.twig' %}
                    </div>
                </div>
            </div>
        </section>

        <section id="objectives-section" class="content">
            <div class="container-fluid">
                <div class="card my-2 shadow">
                    <div class="card-header">
                        <div class="d-flex justify-content-between">
                            <h3  class="text-shadow" style="font-weight: 500;">{{ 'app.view.student.tabs.objectives' | trans }}</h3>
                        </div>
                    </div>
                    <div class="card-body">
                        {% include 'course_info/view/student_objectives.html.twig' %}
                    </div>
                </div>
            </div>
        </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('course_info_layout') }}
