{% extends 'base_homepage.html.twig' %}
{% block navbar %}
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
        </li>
    </ul>
{% endblock %}
{% block content %}

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">{{ courseInfo.title }}</h1>
                </div><!-- /.col -->

            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <section id="content-{{ contentName|default('default') }}" class="content">
        <div class="container-fluid">
            {% block subContent %}

                <!-- presentation du cours -->
                <div class="card my-2 shadow">
                    <div class="card-header">
                        <div class="d-flex justify-content-between">
                            <h3 style="font-weight: 500;text-shadow: 1px 1px 1px #bbb;">{{ 'app.view.student.tabs.presentation' | trans }}</h3>
                        </div>
                    </div>
                    <div class="card-body">
                        {% include 'course_info/view/student_presentation.html.twig' %}
                    </div>
                </div>


            {% endblock %}
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('course_info_layout') }}
{% endblock %}