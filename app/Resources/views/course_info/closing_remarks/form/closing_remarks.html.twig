<div class="card border-primary card-syllabus toggle-focus my-2 shadow active">
    {{ form_start(form) }}
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <h3>Le mot de la fin</h3>
        </div>
    </div>
    <div class="card-body">
        {{ form_errors(form) }}
        <div class="mt-3">
            <div>
                <label placeholder="Période (facultatif)">Espace pour laisser un message à vos étudiants (ex:
                    encouragements, derniers conseils…)</label>
                {{ form_widget(form.closingRemarks) }}
            </div>
            <div class="mt-3">
                <label class="mt-6" placeholder="En quelle(s) langue(s) est dispensé ce cours (facultatif)">Intégrer une
                    ressource vidéo (ou audio) respectant la règlementation sur les droits d'auteur</label>
                <i class="fas fa-exclamation-circle " data-toggle="tooltip" data-placement="bottom" data-html="true" title="{% include 'tooltip/closing_remarks_video.html.twig' %}"></i>
                {{ form_widget(form.closingVideo) }}
            </div>
        </div>
        <div class="mt-2">
            <button type="submit" class="focus-submit btn btn-primary submit button-gradient"
                    data-url="{{ path('course_closing_remarks_message', {'id': courseInfo.id, 'action': 'submit' }) }}">
                Sauvegarder
            </button>
            <button type="button" class="focus-cancel btn btn-secondary button-gradient"
                    data-url="{{ path('course_closing_remarks_message', {'id': courseInfo.id, 'action': 'cancel' }) }}">
                Annuler
            </button>
        </div>
    </div>
    {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': false }) }}
</div>

<script>
    $('[data-toggle="tooltip"]').tooltip({
        container: '.content-wrapper'
    });
</script>
