<div class="d-flex flex-column">
    <span class="font-weight-bold">
        {% if courseInfo.closingRemarks is null %}
            <i class="fas fa-exclamation-circle text-warning"></i>
        {% endif %}
        Message à vos étudiants
    </span>
    {{ courseInfo.closingRemarks|humanizeEmptyData() | purify }}
    <span class="font-weight-bold">
        {% if courseInfo.closingVideo is null %}
            <i class="fas fa-exclamation-circle text-warning"></i>
        {% endif %}
        Intégrer une ressource vidéo (ou audio)
    </span>
    <div class="embed-responsive embed-responsive-16by9">
        {{ courseInfo.closingVideo|raw  }}
    </div>
</div>