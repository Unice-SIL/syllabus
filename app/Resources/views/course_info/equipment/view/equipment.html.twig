<div class="row">
    <div class="col-6" style="height: 400px">
        <div class="card-body text-center table-responsive p-0 h-100">
            <span class="text-bold">Matériel nécessaire</span>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th class="text-left" style="width: 80%">Description</th>
                    <th class="text-center" style="width: 20%">Ajouter</th>
                </tr>
                </thead>
                <tbody>
                {% for equipment in equipments %}
                    <tr>
                        <td class="text-left">{{ equipment.label }}</td>
                        <td class="text-center">
                            <button type="button"
                                    class="btn btn-link modal-action button p-0"
                                    data-action-title="Ajouter une description"
                                    data-action-url="{{ path('course_equipment_equipment_add', {'id': courseInfo.id, 'idEquipment': equipment.id}) }}">
                                <i class="fas fa-plus"></i>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-6" style="height: 400px">
        {% if courseInfo.courseResourceEquipments is empty %}
            <div class="card-body text-center table-responsive p-0 h-100">
                <span class="text-bold">Matériels choisis</span>
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th class="text-left" style="width: 80%">Description</th>
                        <th class="text-center" style="width: 20%">Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td class="text-left">
                            <span>Non renseigné</span></br>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="card-body text-center table-responsive p-0 h-100">
                <span class="text-bold">Matériels choisis</span>
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th class="text-left" style="width: 80%">Description</th>
                        <th class="text-center" style="width: 20%">Modifier/Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ResourceEquipment in courseInfo.courseResourceEquipments %}
                        <tr>
                            <td class="text-left">
                                <span>{{ ResourceEquipment.equipment.label }}</span></br>
                                <span class="font-italic"
                                      style="font-size: 0.9em">{{ ResourceEquipment.description }}</span>
                            </td>
                            <td class="text-center">
                                <button type="button"
                                        class="btn btn-link modal-action p-0"
                                        data-action-title="Modifier une description de matériel"
                                        data-action-url="{{ path('course_equipment_equipment_edit', {'id': ResourceEquipment.id}) }}">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button type="button"
                                        class="btn btn-link modal-action p-0"
                                        data-action-title="Supprimer un matériel"
                                        data-action-url="{{ path('course_equipment_equipment_remove', {'id': courseInfo.id, 'idResourceEquipment': ResourceEquipment.id}) }}">
                                    <i class="fas fa-trash-alt text-danger"></i>
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>
