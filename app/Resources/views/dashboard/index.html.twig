{% extends 'admin_layout.html.twig' %}
{% set h1 = 'Tableau de bord des syllabus' %}
{% block subContent %}
    <div class="card">
        <div class="card-header">
            <div class="col-7" style="padding-left: 0px;">
                <div class="row">
                    <div class="col-10">
                        {{ form_start(form) }}
                        {{ form_row(form.years) }}
                    </div>
                    <div class=" form-group col-2" style="display: flex; justify-content: flex-end">
                        <button type="submit" class="btn btn-primary" style="align-self: flex-end">{{ 'admin.button.display' | trans }}</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- small box publish syllabus -->
                <div class="col-lg-3 col-8">
                    <div class="small-box bg-info">
                        <div class="inner">
                            <h3>{{ syllabusPublished }}</h3>
                            <p>{{ 'admin.dashboard.published_syllabus' | trans }}</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-check"></i>
                        </div>
                        <a href="{{ path('app.admin.course_info.published', {'year': form.years.vars.data.id }) }}"
                           class="small-box-footer">
                            {{ 'admin.button.more_info' | trans }}
                            <i class="fas fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
                <div class="col-1">
                </div>
                <!-- small box uncompleted syllabus -->
                <div class="col-lg-3 col-8">
                    <div class="small-box bg-success">
                        <div class="inner">
                            <h3>{{ syllabusBeingFilled }}</h3>
                            <p>{{ 'admin.dashboard.syllabus_being_filled' | trans }}</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-pen"></i>
                        </div>
                        <a href="{{ path('app.admin.course_info.being_filled', {'year': form.years.vars.data.id }) }}"
                           class="small-box-footer">
                            {{ 'admin.button.more_info' | trans }}
                            <i class="fas fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <span><b>{{ 'admin.dashboard.years_overall' | trans }}</b></span>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- small box count askAdvices -->
                <div class="col-lg-3 col-8">
                    <div class="small-box bg-warning">
                        <div class="inner">
                            <h3>{{ askAdviceCount }}</h3>
                            <p>{{ 'admin.dashboard.advice_request' | trans }}</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-comment-dots"></i>
                        </div>
                        <a href="{{ path('app_admin.ask_advice_index') }}" class="small-box-footer">
                            {{ 'admin.button.more_info' | trans }}
                            <i class="fas fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
                <div class="col-1">
                </div>
                <!-- small box count ask primes -->
                <div class="col-lg-3 col-8">
                    <div class="small-box bg-danger">
                        <div class="inner">
                            <h3>0</h3>
                            <p>{{ 'admin.dashboard.prime_request' | trans }}</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-euro-sign"></i>
                        </div>
                        <a class="small-box-footer">
                            {{ 'admin.button.more_info' | trans }}
                            <i class="fas fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
