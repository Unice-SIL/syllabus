{% extends 'admin_layout.html.twig' %}
{% set h1 = 'Liste des équipements' %}
{% block subContent %}

    <div class="card">

        <div class="card-body">

            <div class="d-flex justify-content-end pb-3">
                {% include 'action/_equipment_create.html.twig' %}
            </div>

            <div class="border p-3 mb-3">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-lg-6 col-md-12">
                        {{ form_row(form.label) }}
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Filtrer</button>
                            <a class="btn btn-danger" href="{{  path('app.admin.equipment.index')  }}">Réinitialiser les filtres</a>
                        </div>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>

            {% if pagination.totalItemCount > 0 %}
                <table class="table table-hover table-responsive-sm">
                    <thead>
                    <tr>
                        <th class="sortable">{{ knp_pagination_sortable(pagination, 'app.form.equipment.label.label'|trans, 'e.label') }}</th>
                        <th class="sortable">{{ knp_pagination_sortable(pagination, 'app.form.equipment.label.label_visibility'|trans, 'e.labelVisibility') }}</th>
                        <th class="sortable">{{ knp_pagination_sortable(pagination, 'app.form.equipment.label.obsolete'|trans, 'e.obsolete') }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for equipment in pagination %}
                        <tr>
                            <td>
                                {% if is_granted('ROLE_ADMIN_EQUIPMENT_CREATE') %}
                                    <a href="{{ path('app.admin.equipment.edit', { 'id' : equipment.id }) }}">{{ equipment.label }}</a>
                                {% else %}
                                    {{ equipment.label }}
                                {% endif %}
                            </td>
                            <td>{{ equipment.labelVisibility|humanizeBoolean }}</td>
                            <td>{{ equipment.obsolete|humanizeBoolean }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="alert alert-info">Aucun équipement ne correspond à ces critères</div>
            {% endif %}
        </div>
        <!-- /.card-body -->
        {% if knp_pagination_render(pagination) %}
            <div class="card-footer clearfix">
                {{ knp_pagination_render(pagination) }}
            </div>
        {% endif %}
    </div>

{% endblock %}
