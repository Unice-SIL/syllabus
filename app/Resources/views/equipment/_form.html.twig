<div class="card card-primary">
    <!-- /.card-header -->
    <!-- form start -->
    {{ form_start(form) }}
    <div class="card-body">

        {{ form_row(form.label) }}
        <div class="custom-control custom-switch">
            {{ form_row(form.labelVisibility) }}
        </div>

        {% if form.obsolete is defined %}
            <div class="custom-control custom-switch">
                {{ form_row(form.obsolete) }}
            </div>
        {% endif %}

    </div>
    <!-- /.card-body -->

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </div>
    {{ form_end(form) }}
</div>