{% extends 'base.html.twig' %}
{% block main %}
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        {% block navbar %}{% endblock %}
    </nav>
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <a href="{{ logoHref|default('#') }}" class="brand-link elevation-4 logo-switch">
            <img src="{{ asset('images/uca-logo-dark-small.png') }}" alt="Logo Syllabus" class="brand-image-xs logo-xs">
            <img src="{{ asset('images/uca-logo-dark.png') }}" alt="Logo Syllabus" class="brand-image-xl logo-xl">
        </a>
        {% block sidebar %}{% endblock %}
    </aside>
    <div class="content-wrapper">
        {% block content %}{% endblock %}
    </div>
    <footer class="main-footer">
        {% block footer %}{% endblock %}
    </footer>
{% endblock %}