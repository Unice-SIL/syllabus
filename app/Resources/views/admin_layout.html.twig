{% extends 'base_layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
    <style>
        body {
            position: initial;
        }
    </style>
{% endblock %}

{% block navbar %}
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
        </li>
    </ul>
{% endblock %}

{% set logoHref = path('app_admin_year_index') %}
{% block sidebar %}
    <div class="sidebar">
        <!-- Sidebar user (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="{{ asset('images/default_user.jpeg') }}" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">Alexander Pierce</a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        {% macro printActiveSidebarLink(route, options) %}
            {% if  route in  'app_admin_activity' %}
                {{ app.request.attributes.get('type') == options.activityType ? 'active' }}
            {% else %}
                {{ route in app.request.get('_route') ? 'active'}}
            {% endif %}
        {% endmacro %}
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                     with font-awesome or any other icon font library -->
                <li class="nav-item">
                    <a href="{{ path('app_admin_year_index') }}" class="nav-link {{ _self.printActiveSidebarLink('app_admin_year') }}">
                        <i class="nav-icon fas fa-calendar"></i>
                        <p>
                            Années
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_admin_user_index') }}" class="nav-link {{ _self.printActiveSidebarLink('app_admin_user') }}">
                        <i class="nav-icon fas fa-user"></i>
                        <p>
                            Utilisateurs
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a
                            href="{{ path('app_admin_activity_index', { 'type' : constant('AppBundle\\Constant\\ActivityType::ACTIVITY')}) }}"
                            class="nav-link {{ _self.printActiveSidebarLink('app_admin_activity', {'activityType' : constant('AppBundle\\Constant\\ActivityType::ACTIVITY') }) }}"
                    >
                        <i class="nav-icon fas fa-film"></i>
                        <p>
                            Activités
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a
                            href="{{ path('app_admin_activity_index', { 'type' : constant('AppBundle\\Constant\\ActivityType::EVALUATION')}) }}"
                            class="nav-link {{ _self.printActiveSidebarLink('app_admin_activity', {'activityType' : constant('AppBundle\\Constant\\ActivityType::EVALUATION') }) }}"
                    >
                        <i class="nav-icon fas fa-music"></i>
                        <p>
                            Evaluations
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_admin_course_info_index') }}" class="nav-link {{ _self.printActiveSidebarLink('app_admin_course_info') }}">
                        <i class="nav-icon fas fa-file-alt"></i>
                        <p>
                            Syllabus
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_admin_structure_index') }}" class="nav-link {{ _self.printActiveSidebarLink('app_admin_structure') }}">
                        <i class="nav-icon fas fa-building"></i>
                        <p>
                            Structures
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_admin_equipment_index') }}" class="nav-link {{ _self.printActiveSidebarLink('app_admin_equipment') }}">
                        <i class="nav-icon fas fa-drafting-compass"></i>
                        <p>
                            Equipements
                        </p>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
{% endblock %}

{% block content %}

    {% for type, flash_messages in app.session.flashBag.all %}
        {% for msg in flash_messages %}
            <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                {{ msg }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">{{ h1|default('Il faut ajouter un h1') }}</h1>
                </div><!-- /.col -->

            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>


    <section id="content-{{ contentName|default('default') }}" class="content">
        <div class="container-fluid">
            {% block subContent %}{% endblock %}
        </div>
    </section>
{% endblock %}

{% block footer %}
    <div class="float-right d-none d-sm-block">
        <b>Version</b> 3.0.0
    </div>
    <strong>Copyright © 2014-2019 <a href="http://adminlte.io">AdminLTE.io</a>.</strong> All rights
    reserved.
{% endblock %}